// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [
		"author_id",
		"article_id",
		"content"
	],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"author_id": {
			"bsonType": "string",
			"description": "评论人",
			"foreignKey": "uni-id-users._id"
		},
		"article_id": {
			"bsonType": "string",
			"description": "评论的文章",
			"foreignKey": "article._id"
		},
		"content": {
			"bsonType": "string",
			"description": "评论内容"
		},
		"avatar": {
			"bsonType": "string",
			"description": "图片评论"
		},
		"avatar_file": {
			"bsonType": "file",
			"description": "图片原始文件对象"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}