// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"title": {
			"bsonType": "string",
			"description": "标题"
		},
		"content": {
			"bsonType": "string",
			"description": "正文"
		},
		"description": {
			"bsonType": "string",
			"description": "简短描述"
		},
		"author_id": {
			"bsonType": "string",
			"foreignKey": "user._id",
			"description": "作者"
		},
		"avatar_url": {
			"bsonType": "string",
			"description": "缩略图"
		},
		"created_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"modified_time": {
			"bsonType": "timestamp",
			"description": "修改时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}