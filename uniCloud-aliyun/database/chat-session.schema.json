// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": "doc.from_id == auth.uid || doc.to_id == auth.uid",
		"create": "'user' in auth.role",
		"update": "doc.from_id == auth.uid || to_id == auth.uid",
		"delete": false
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"from_id": {
			"bsonType": "string",
			"foreignKey": "uni-id-users._id",
			"description": "发起会话的用户"
		},
		"to_id": {
			"bsonType": "string",
			"foreignKey": "uni-id-users._id",
			"description": "被发起会话的用户"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "会话创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"last_message_id": {
			"bsonType": "string",
			"description": "最近一次聊天消息",
			"foreignKey": "chat-message._id"
		}
	}
}