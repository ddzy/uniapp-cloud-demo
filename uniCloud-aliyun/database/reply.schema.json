// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [
		"content",
		"from",
		"to",
		"comment_id"
	],
	"permission": {
		"read": true,
		"create": true,
		"update": true,
		"delete": true
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"from": {
			"bsonType": "string",
			"description": "回复人",
			"foreignKey": "user._id"
		},
		"to": {
			"bsonType": "string",
			"description": "回复谁",
			"foreignKey": "user._id"
		},
		"comment_id": {
			"bsonType": "string",
			"description": "所属的评论",
			"foreignKey": "comment._id"
		},
		"content": {
			"bsonType": "string",
			"description": "回复的文本内容"
		},
		"avatar": {
			"bsonType": "string",
			"description": "回复的图片内容"
		},
		"created_time": {
			"bsonType": "timestamp",
			"description": "回复时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}