// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [
		"content",
		"from",
		"to",
		"comment_id"
	],
	"permission": {
		"read": true,
		"create": "'user' in auth.role",
		"update": "doc.from == auth.uid",
		"delete": "doc.from == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"from": {
			"bsonType": "string",
			"description": "回复人",
			"foreignKey": "uni-id-users._id"
		},
		"to": {
			"bsonType": "string",
			"description": "回复谁",
			"foreignKey": "uni-id-users._id"
		},
		"comment_id": {
			"bsonType": "string",
			"description": "所属的评论",
			"foreignKey": "comment._id"
		},
		"content": {
			"bsonType": "string",
			"description": "回复的文本内容"
		},
		"avatar": {
			"bsonType": "string",
			"description": "回复的图片内容"
		},
		"avatar_file": {
			"bsonType": "file",
			"description": "图片的文件对象"
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "回复时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}